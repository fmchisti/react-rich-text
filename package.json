{
  "name": "@fahimcode/react-rich-text",
  "version": "0.1.0",
  "description": "An advanced, open-source, 100% customizable rich text editor for React with full TypeScript support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "docs"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "playground": "pnpm --filter playground dev",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "is-hotkey": "^0.2.0",
    "slate": "^0.110.2",
    "slate-history": "^0.110.3",
    "slate-react": "^0.110.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/is-hotkey": "^0.1.10",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "jsdom": "^25.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "react",
    "rich-text",
    "rich-text-editor",
    "editor",
    "wysiwyg",
    "slate",
    "slatejs",
    "typescript",
    "content-editor",
    "text-editor",
    "markdown",
    "html-editor",
    "toolbar",
    "formatting",
    "bold",
    "italic",
    "headings",
    "blockquote",
    "code-block",
    "lists",
    "bullet-list",
    "numbered-list",
    "tables",
    "images",
    "image-upload",
    "video-embed",
    "youtube",
    "vimeo",
    "links",
    "variables",
    "theming",
    "customizable",
    "headless",
    "serializer",
    "html-serializer",
    "markdown-serializer",
    "plugins",
    "open-source"
  ],
  "license": "MIT",
  "author": "Fahim Mahmud Chisti (https://fahimcode.com/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/fmchisti/react-rich-text"
  },
  "homepage": "https://github.com/fmchisti/react-rich-text#readme",
  "bugs": {
    "url": "https://github.com/fmchisti/react-rich-text/issues"
  },
  "sideEffects": [
    "**/*.css"
  ]
}
